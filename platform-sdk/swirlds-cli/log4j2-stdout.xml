<!-- Simple console-only logging configuration that outputs all log statements -->
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p %-16marker &lt;%t&gt; %c{1}: %msg%n</pattern>
      </PatternLayout>
    </Console>
  </Appenders>
  <Loggers>
    <!-- Root logger set to INFO level, outputs everything to console -->
    <!-- No marker filters - all log statements will be displayed -->
    <Root level="INFO">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>